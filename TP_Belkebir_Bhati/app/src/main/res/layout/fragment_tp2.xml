<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tp2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="@string/tp_2"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnNavHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tp2_title"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/tp2_title"
        android:text="@string/go_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tp2_title"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/tp2_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:autofillHints="false"
                android:inputType="none"
                android:textSize="25sp"
                android:textAlignment="textEnd"/>

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/tp2_bg_btn"
                android:id="@+id/tp2_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.80"
                android:src="@drawable/tp2_del_btn"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_margin="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                android:id="@+id/tp2_1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/tp2_bg_btn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="1"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/tp2_2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/tp2_bg_btn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="2"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/tp2_3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/tp2_bg_btn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="3"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/tp2_plus"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/tp2_bg_btn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="+"
                android:textSize="25sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/tp2_4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="4"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="5"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="6"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_minus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="-"
                    android:textSize="25sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/tp2_7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="7"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="8"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="9"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_mult"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="ร"
                    android:textSize="25sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/tp2_0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_dot"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="."
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_clear"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="C"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/tp2_div"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/tp2_bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="รท"
                    android:textSize="25sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                android:id="@+id/tp2_equals"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/tp2_bg_btn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="="
                android:textSize="25sp"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>


</RelativeLayout>